#app{
  .content{
    .header{
      position relative
      .showtime{
        color rgba(0, 222, 255, 1)
        position absolute
        right 16px
        top: 8px;
        font-size: 18px;
      }
    }
    .main{
      height 984px
      padding 20px 25px
      .table-head {
        margin-top 13px
        border-bottom: none;
        height: 40px;
        line-height: 40px;
        background-color: #052451;
        span {
          color: #fff;
          font-weight bold
        }
      }

      .table-container {
        height: 360px;
        overflow: hidden;
        box-sizing: border-box;

        .swiper-wrapper {
          width: 100%;

          li {
            width: 100%;
            height: 40px;
            line-height: 40px;
            background-color #052451

            span {
              color: #fff;
              border-right: 1px solid #0a274d;
              border-bottom: 1px solid #0a274d;
            }

            span:last-child {
              border-right: none;
            }
          }
          li:nth-child(even) {
            background-color #071f43
          }
        }

      }

      .center{
        width calc(100% - 900px)
        padding 0 25px
        background-image url("../images/product/grid.png")
        background-repeat no-repeat
        background-position bottom
        background-size 100%
        .cen-bottom{
          height 284px
          width 100%
          background-image url("../images/ptgk/back-blue.png")
          background-size 100% 100%
          padding 0 40px 20px 40px
          .bom-top{
            height 36px
            background-image url("../images/ptgk/cen-top.png")
            background-repeat no-repeat
            background-position center
            span{
              color: rgba(255, 255, 255, 1);
              font-size: 18px;
              line-height: 150%;
              font-weight: bold;
            }
          }
          .pro-score{
            width 48%
            .pro-head {
              margin-top 13px
              border-bottom: none;
              height: 40px;
              line-height: 40px;
              background-color: #052451;
              span {
                color: #fff;
                font-weight bold
              }
            }

            .pro-container {
              height: 160px;
              overflow: hidden;
              box-sizing: border-box;
              .swiper-wrapper {
                width: 100%;
                li {
                  width: 100%;
                  height: 40px;
                  line-height: 40px;
                  background-color #052451
                  span {
                    color: #fff;
                    border-right: 1px solid #0a274d;
                    border-bottom: 1px solid #0a274d;
                  }
                  .score{
                    color #ffaf00
                  }
                  span:last-child {
                    border-right: none;
                  }
                }
                li:nth-child(even) {
                  background-color #071f43
                }
              }
            }
          }
        }
        .count-map{
          width 100%
          height calc(100% - 284px)
          .count{
            width 86%
            margin-top 15px
            .count-ev{
              width 166px
              height 166px
              background-size cover
              .cont{
                font-size: 20px;
                line-height: 150%;
              }
              span{
                color white
              }
            }
          }
          .map-all{
            height calc(100% - 166px)
            width 100%
            background-image url("../images/product/cicle.png")
            background-repeat no-repeat
            background-position bottom
            background-size 92%
            .map{
              height 91%
              width 920px
              background-image url("../images/product/map.png")
              background-repeat no-repeat
              background-size: 58% 100%;
              background-position: 33% top;
              .dot{
                width: 14px;
                height: 14px;
                background-color: rgba(255, 141, 26, 1);
                border-radius: 7px;
              }
              .word{
                color rgba(255, 255, 255, 1)
                margin-left 16px
              }
            }
          }
        }
      }
    }
  }
}