//---------------------------------边框
.side {
  background-image url("../images/ptgk/back-blue.png")
  background-size 100% 100%
  width 450px
  position relative
  padding 20px 12px
  &::before{
    position: absolute;
    top: 0;
    left 0
    width: 8px;
    height: 8px;
    border-left: 2px solid #3c56c6;
    border-top: 2px solid #3c56c6;
    content: '';
  }
  &::after{
    position: absolute;
    top: 0;
    right: 0;
    width: 8px;
    height: 8px;
    border-right: 2px solid #3c56c6;
    border-top: 2px solid #3c56c6;
    content: '';
  }
  .panel-footer{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    &::before{
      position: absolute;
      bottom: 0;
      left: 0;
      width: 8px;
      height: 8px;
      border-left: 2px solid #3c56c6;
      border-bottom: 2px solid #3c56c6;
      content: '';
    }
    &::after{
      position: absolute;
      bottom: 0;
      right: 0;
      width: 8px;
      height: 8px;
      border-right: 2px solid #3c56c6;
      border-bottom: 2px solid #3c56c6;
      content: '';
    }
  }
}
.specific-content{
  background-image url("../images/product/blue.png")
  background-repeat no-repeat
  background-position bottom
  background-size 100%
  padding: 0px 11px 16px 11px
  .sp-title{
    height 34px
    position relative
    background-image url("../images/ptgk/base.png")
    background-repeat no-repeat
    background-position bottom left
    span{
      position absolute
      left 20px
      bottom 7px
      color: rgba(255, 255, 255, 1);
      font-size: 18px;
      line-height: 150%;
      font-weight: bold;
    }
  }
}

