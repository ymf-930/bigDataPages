#app {
  .content {
    .main {
      height 965px
      padding 20px
      .specific-content{
        .promise{
          .indicators-count{
            height 172px
            padding 0 16px
            .count{
              width 165px
              background-image: url("../images/ptgk/blue-stand.png");
              background-size: 94% auto;
              background-repeat: no-repeat;
              background-position: center bottom;
              position relative
              .ind-count{
                color: #f3dfad;
                font-size: 20px;
                font-weight: bold;
                position absolute
                top 64px
              }
              span{
                color white
              }
              .ind-name{
                position absolute
                top 27px
              }
            }
          }
        }
      }
      .center {
        width: calc(100% - 900px - 40px);
        background-image url("../images/ptgk/back-blue.png")
        background-size 100% 100%
        padding 20px
        position relative
        .distribution{
          width 100%
          height 413px
          .distrib{
            height 100%
            .distrib-detail{
              width 48%
              position relative
              .dis-title{
                color: rgba(255, 255, 255, 1);
                font-size: 18px;
                line-height: 150%;
                font-weight: bold;
                position absolute
              }
              .dis-main{
                position relative
                ul{
                  width 100%
                  position absolute
                  top 45px
                  li{
                    height 46px
                    line-height 46px
                    background-color rgba(7, 31, 67, 1)
                    border-top 1px solid rgba(20, 50, 95, 1)
                    span{
                      text-align center
                      color white
                    }
                    .main-center{
                      border-left 1px solid rgba(20, 50, 95, 1)
                      border-right 1px solid rgba(20, 50, 95, 1)
                    }
                    span:nth-child(2) {
                      color #1089ff
                    }
                  }
                }
              }
            }
          }
        }
        .seat{
          position absolute
          bottom 0
        }
        .down{
          position relative
          height 433px
        }

      }
    }
  }
}