#app{
  .content{
    .main{
      height 965px
      padding 20px
      .left {
        .specific-content{
          .table-head {
            margin-top 13px
            border-bottom: none;
            height: 48px;
            line-height: 48px;
            background-color: #052451;
            span {
              color: #fff;
            }
            .name{
              padding-left 16px
              border-right rgba(198, 198, 198, 1) solid 0px;
              border-right: 1px solid #092751;
            }
          }

          .table-container {
            height: 480px;
            overflow: hidden;
            box-sizing: border-box;

            .swiper-wrapper {
              width: 100%;

              li {
                width: 100%;
                height: 48px;
                line-height: 48px;
                background-color #052451

                span {
                  color: #fff;
                  border-right: 1px solid #092751;
                  border-bottom: 1px solid #092751;
                }

                span:nth-child(1) {
                  padding-left 16px
                }

                span:nth-child(2) {
                  color #0fbbdf
                }

                span:last-child {
                  border-right: none;
                }
              }
              li:nth-child(even) {
                background-color #071f43
              }
            }

          }

        }
      }
      .right {
        .specific-content{
          .report-head {
            margin-top 13px
            border-bottom: none;
            height: 48px;
            line-height: 48px;
            background-color: #052451;
            span {
              color: #fff;
            }
            .name{
              padding-left 16px
              border-right rgba(198, 198, 198, 1) solid 0px;
              border-right: 1px solid #092751;
            }
          }

          .report-container {
            height: 240px;
            overflow: hidden;
            box-sizing: border-box;

            .swiper-wrapper {
              width: 100%;

              li {
                width: 100%;
                height: 48px;
                line-height: 48px;
                background-color #052451

                span {
                  color: #fff;
                  border-right: 1px solid #092751;
                  border-bottom: 1px solid #092751;
                }

                span:nth-child(1) {
                  padding-left 16px
                }

                span:nth-child(2) {
                  color #0fbbdf
                }

                span:last-child {
                  border-right: none;
                }
              }
              li:nth-child(even) {
                background-color #071f43
              }
            }

          }

        }
        .main-rig{
          height 200px
        }
      }

      .center{
        width calc(100% - 900px - 32px)
        .cen-top{
          width 100%
          padding 0 20px
          .ev-count{
            width 297px
            height 246px
            background-image url("../images/sjgj/seat02.png")
            margin-top 34px
            span{
              color white
              font-size 16px
            }
            .number{
              color: rgba(255, 233, 178, 1);
              font-size: 24px;
              line-height: 150%;
            }
          }
        }
        .cen-bottom{
          width 100%
          height 100%
          background-image url("../images/ptgk/back-blue.png")
          background-size 100% 100%
          padding 20px 20px 0
          .bottom-message{
            height 50%
            .specific-content{
              width 49%
              position relative
              .main-rig{
                width 100%
                position absolute
                bottom 50px
              }
              img{
                position absolute
                bottom 20px
              }
            }
          }
        }
      }
    }
  }
}