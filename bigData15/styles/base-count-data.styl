.data-box {
  margin: auto;
  width: 80%;
  height: 80px;
  position: relative;

  .data-title {
    color: rgba(255, 255, 255, 1);
    font-size: 32px;
    font-family: YouSheBiaoTiHei,sans-serif;
  }

  .num-box {
    margin 20px 0 30px 0;
    .num-item {
      width: 42px;
      height: 52px;
      background-image: url("../assets/images/num-bg.png");
      background-size: 100% 100%;
      background-repeat: no-repeat;
      font-size: 28px;
      color: #fff;
      //margin-right: 20px;
      margin 0 10px;
    }

    .num {
      position: absolute;
      left: 52.6%;
      transform: translate(-50%, 0);
      top: 30px;
      color: rgba(255, 255, 255, 1);
      font-size: 35px;
      letter-spacing: 42px;
      font-weight: bold;
    }
  }
}