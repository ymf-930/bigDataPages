@font-face {
  font-family: "YouSheBiaoTiHei";
  src: url('../assets/fonts/YouSheBiaoTiHei-2.ttf') format('truetype');
}

#app {
  #barChart1 {
    width: 100%;
    height: 235px;
  }

  #barChart2 {
    width: 100%;
    height: 230px;
  }

  #lineChart1 {
    width 100%;
    height: 235px;
  }

  .left-box {

    .panel1-title {
      font-size: 18px;
      text-align center;
      color #fff;
      font-family: YouSheBiaoTiHei, sans-serif;
    }

    .panel-box1 {
      margin-bottom: 9px;

      img {
        display block;
        width 113px;
        height 93px;
      }

      .text {
        color: #fff;
        font-size: 16px;
      }

      .value {
        font-size: 22px;
        font-weight: bold;
        width 80px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
    }

    .top-box {
      width 100%;
      height 60px;
      background-image: url("../assets/images/top-box-bg.svg");
      background-size: 100% 100%;
      background-repeat: no-repeat;

      .top-item {
        flex 1;
        padding 0 8px;
        text-align center;
        border-right: 1px dashed rgba(255, 255, 255, 0.4);

        .text {
          color: rgba(255, 255, 255, 1);
          font-size: 12px;
        }

        .value {
          color: rgba(76, 255, 255, 1);
          font-size: 22px;
          font-weight: bold;
          width 80px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }

        &:last-child {
          border-right none;
        }
      }
    }

  }

  .center-box {
    height 100%;
    padding 0 20px;

    .data-box-box {
      padding-top: 80px;
    }

    .center-container {
      height calc(100% - 180px)
      position relative;

      .depart-card {
        background-image: url("../assets/images/map-card-bg.png");
        background-size: 100% 100%;
        background-repeat: no-repeat;

        .title {
          font-size: 16px;
          padding 12px 10px 8px;
        }

        .line {
          width 180px;
          height 1px;
          margin 0 auto;
          background-color: rgba(255, 255, 255, 0.66);
        }

        .text {
          color: rgba(255, 255, 255, 1);
          font-size: 14px;
          padding 12px 0;
        }

        .value {
          color: rgba(76, 255, 255, 1);
          text-align center;
          font-size: 22px;
          font-weight: bold;
          padding-bottom: 16px;
          width 200px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }
      }
    }
  }


  .right-box {
    .panel-bottom {
      flex-wrap wrap;
      width 100%;

      .bottom-item {
        display inline-block;
        width 50%;
        position relative;
        padding 0 14px;

        img {
          display block;
          width: 135px;
          height: 86px;
        }

        .text {
          color: rgba(255, 255, 255, 1);
          font-size: 14px;
          font-weight: bold;
          position absolute;
          top 33%;
          left 35%;
        }

        .value {
          color: rgba(76, 255, 255, 1);
          font-size: 22px;
          font-weight: bold;
          position absolute;
          top 50%;
          left 35%;
          width 80px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }
      }
    }
  }
}