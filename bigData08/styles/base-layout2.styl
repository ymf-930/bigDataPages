.page-content {
  height: 100%;
  width 100%;
  background-image: url("../images/common/container-bg.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% 100%;
  position relative

  .header {
      width: 100%;
      height: 260px;
      background-image: url("../images/home/head-bg.png");
      background-size: 100% 100%;
      background-repeat: no-repeat;
      position: relative;

      .header-box {
        width 1158px;
        height 135px;
        margin-top: 17px;
      }

      .show-nav {
        background-image: url("../images/course/nav-title-bg.png");
        background-size: 100% 100%;
        background-repeat: no-repeat;
      }

      .header-tab {
        width: 167px;
        height: 33px;
        text-align: center;
        line-height: 33px;
        font-size: 14px;
        color: rgba(1, 190, 232, 1);
        font-weight: bold;
        background-size: 100% 100%;
        background-repeat: no-repeat;
        margin-top: 54px;
      }

      .tab-center {
        font-size: 32px;
        letter-spacing: 4px;
        height 48px;
        line-height: 150%;
        text-align: center;
        font-weight: bold;
        font-style: italic;
        color #fff;
      }
    }


  .content-box {
    height: calc(100% - 260px)

    .center {
      width: 100%;
      padding 0 20px;
      margin-top: -140px;

      .center-left {
        width: 24%;
      }

      .center-center {
        width: 52%;
      }

      .center-right {
        width: 24%;
      }
    }

    .bottom {
      width 100%;
      padding 0 20px;
    }
  }

}
