.panel-box {
  width: 100%;
  min-height: 200px;
  height auto;
  color: rgba(80, 80, 80, 1);
  background-color: rgba(36, 41, 75, 0.5);
  //box-shadow: rgba(53, 120, 220, 0.5) solid 1px;
  border 1px solid rgba(53, 120, 220, 0.5);
  border-radius: 6px;
  font-size: 14px;
  margin-bottom: 20px;
  padding 20px;
  position relative;

  .title-box {
    width: 100%;
    height: 34px;
    background-image: url("../images/common/panel-title-bg.png");
    background-position: left bottom;
    background-size: 100%;
    background-repeat: no-repeat;
    font-size: 18px;
    color: #fff;
    font-weight: bold;
    line-height: 27px;

    img{
      display inline-block;
      width 32px;
      height 28px;
    }
    span{
      padding-left: 10px;
      padding-bottom: 15px;
    }

    .button {
      width: 72px;
      height: 30px;
      background-color: rgba(19, 54, 110, 0.54);
      line-height: 30px;
      text-align: center;
      cursor: pointer;
      font-size: 14px;
      color: #fff;
      border-radius: 18px;
      font-weight: 500;
    }

    .button:hover {
      background-color: #98a5ba8a;
    }
  }
}