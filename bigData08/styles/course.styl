.center-content {
  width 100%;
  height 100%;
  position relative;
}

.nav-circle-content {
  width 100%;
  height 100%;
  display flex;
  justify-content center;
  align-items center;
  z-index 2;
  position relative;

  .nav-circle-box {

    &:nth-child(1) {
      margin-top: 180px;
    }

    &:nth-child(2) {
      margin-top: 80px;
    }

    &:nth-child(3) {
      margin-top: 0;
    }

    &:nth-child(4) {
      margin-top: -160px;
    }

    &:nth-child(5) {
      margin-top: -340px;
    }

    &:nth-child(6) {
      margin-top: -320px;
    }
  }
}

.ribbon {
  display block;
  width 100%;
  height 470px;
  position absolute;
  left 0;
  bottom 0;
}