.nav-box {
  padding 15px 0;

  .nav-item {
    color: rgba(185, 232, 255, 1);
    font-size: 18px;
    height 30px;
    line-height: 30px;
    text-align: center;
    padding 0 40px;
    cursor pointer;

    &:first-child {
      height 30px;
      line-height 30px
      transform rotate(20deg)
      transform-origin: 80% 100%;
    }

    &:last-child {
      height 30px;
      line-height 30px
      transform rotate(-20deg)
      transform-origin: 20% 100%;
    }
  }

  .nav-item-active {
    color: rgba(255, 255, 255, 1);
    background: url("../images/course/nav-title-active-bg.png");
    background-repeat: no-repeat;
    background-position: center bottom;
    font-weight: bold;
  }
}
