#app {
  position absolute
  .bottom{
    position absolute
    bottom 0
    width 100%
    height 50px
    background-image url("../images/server/bottom.png")
    background-size 100% 100%
    div{
      width 100px
      cursor pointer
      height 100%
      color rgba(255, 255, 255, 0.65)

    .isActive{
      color rgba(255, 255, 255, 1)
      background-image url("../images/server/bottom-shine.png")
      background-size: 100% 100%;
    }
  }
  #barChart {
    width: 100%;
    height: 224px;
  }
  .server-content{
    padding-top: 10px;
    .server-main{
      height 98px
      width 44%
      .left{
        width 61px
        height 100%
        background-image url("../images/server/seat.png")
        background-size 100%
        background-repeat no-repeat
        background-position bottom
      }
      .right{
        width calc(100% - 61px)
        padding-left 8px
        .name{
          height 20px
          background-image url("../images/server/word-back.png")
          background-repeat no-repeat
          background-size 100% 100%
          color white
        }
        .num{
          font-size 19px
          font-weight: bold
          font-style: italic
          color rgba(76, 255, 255, 1)
        }
      }
    }
  }
  .help-content{
    height 240px
    .help-item{
      width 30%
      height 150px
      position relative
      background-repeat no-repeat
      background-position center
      .help-name{
        position absolute
        top 74px
        color rgba(255, 255, 255, 1)
      }
      .help-count{
        position absolute
        top 90px
        color: rgba(76, 255, 255, 1);
        font-size: 20px;
      }
    }
  }
  .market-content{
    .market-item{
      margin-top 25px
      .market-message{
        padding-left 20px
        .message{
          padding-top 8px
        }
        .lf{
          color white
          width 100px
        }
        .rt{
          color white
          width 168px
        }
      }
    }
  }
}