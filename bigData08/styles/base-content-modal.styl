.modal-mask{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width 100%;
  height: 100%;
  background-color: rgba(0,0,0,.45)
  z-index 99

  .content-modal-box {
    width: 1490px;
    height: 870px;
    background-color: rgba(14, 31, 64, 1);
    position absolute;
    top 150px;
    left 50%;
    transform translateX(-50%);
    z-index 99

    .header-box {
      width 100%;
      height 60px;
      background-image: url("../images/course/header-bg.png");
      background-size: 100% 100%;
      background-repeat: no-repeat;
      display flex;
      align-items center;
      justify-content space-between;

      .left {
        background-image: url("../images/course/title-bg.png");
        background-repeat: no-repeat;
        margin-left: 16px;

        .title {
          width: 354px;
          height: 40px;
          line-height: 40px;
          color: rgba(255, 255, 255, 1);
          font-size: 30px;
          text-align: left;
          margin-left: 50px;
        }
      }

      .back {
        display block;
        width 30px;
        height 30px;
        margin-right: 30px;
        cursor pointer;
      }
    }

    .content-box {
      width 100%;
      height: calc(100% - 60px);
      position relative;

      .title {
        width 426px;
        height 40px;
        background-image: url("../images/course/title-bg2.png");
        background-position: 100% 5px;
        background-size: 100% 100%;
        background-repeat: no-repeat;
        margin 30px 0 30px 50px;


        .dot{
          display inline-block;
          width: 13px;
          height: 13px;
          border-radius 50%;
          background-color: rgba(41, 152, 255, 1);
        }
        span {
          color: rgba(255, 255, 255, 1);
          font-size: 24px;
          text-align: left;
          padding-left: 40px;
        }
      }

      .content-container {
        height: calc(100% - 100px);
        display flex;
        justify-content center;

        .left {
          width 60%;
          padding 0 40px;
          display flex;
          flex-direction column;

          .swiper-container {
            width: 800px;
            height: 620px;
            z-index 100

            .swiper-slide {
              background-color: rgba(4, 18, 49, 0.6);
              display flex;
              align-items center;
              justify-content center;
            }
          }

          .swiper-pagination {
            bottom 12px;
            z-index 100
          }

          .swiper-pagination-bullet {
            width: 14px;
            height: 14px;
            background: rgba(255, 255, 255, 0.5)
          }

          .swiper-pagination-bullet-active {
            width: 24px;
            height: 14px;
            background-color: rgba(255, 255, 255, 1);
            border-radius: 7px;
          }

          /*去掉默认样式*/

          .swiper-button-prev:after {
            display: none;
          }

          .swiper-button-next:after {
            display: none;
          }

          /*自定义样式*/

          .swiper-button-prev {
            width: 50px;
            height: 50px;
            background: url('../images/course/prev.png') center no-repeat;
            background-size: 100%;
          }

          .swiper-button-next {
            width: 50px;
            height: 50px;
            background: url('../images/course/next.png') center no-repeat;
            background-size: 100%;
          }

          img {
            display block;
            max-width 85%;
            max-height 85%;
            object-fit cover;
          }
        }

        .right {
          width 40%;
          padding 0 40px;

          .text-box {
            width 400px;
            height 406px;
            background-image: url("../images/course/text-bg.png");
            background-size: 100% 100%;
            background-repeat: no-repeat;
            display flex;
            align-items center;
            justify-content center;

            .text {
              color: rgba(113, 129, 166, 1);
              font-size: 20px;
              text-indent 2em;
              width 300px;
              height 320px;
              overflow: auto;
              margin 50px;
              line-height 40px;

              &::-webkit-scrollbar {
                display none;
              }
            }

          }
        }
      }


      .modal-bg {
        position absolute;
        width 100%;
        height 348px;
        display block;
        bottom 0;
        left 0;
      }
    }
  }
}
