          }
        }

        .table-container {
          height: 150px;
          overflow: hidden;
          box-sizing: border-box;
          border: 1px solid #168cd2;

          .swiper-wrapper {
            width: 100%;

            li {
              display: flex;
              width: 100%;
              height: 30px;
              line-height: 30px;

              span {
                text-align: center;
                flex: 1;
                color: #fff;
                border-right: 1px solid #168cd2;
                border-bottom: 1px solid #168cd2;
              }

              span:nth-child(1) {
                flex: 1;
              }

              span:nth-child(2) {
                flex: 1.5;
              }

              span:nth-child(3) {
                flex: 1.5;
              }

              span:last-child {
                border-right: none;
              }
            }
          }

        }
      }

    }

    //中间部分样式
    .info-bar {
      width: calc(100vw - 1000px);
      height: 100%;
      display: block;
      margin: 0 auto;
      clear: both;

      .card-container {
        .panel {
          padding 18px;
        }
      }

      .footer-box {
        display: flex;
        height: 244px;
        padding: 10px;

        .left-container {
          width 202px;
          height 202px;
          margin-top: 20px;
          background: url(../images/img-bg.png) no-repeat center;
          background-size: 100%;
          display: flex;
          align-items: center;

          img {
            width: 203px;
            height: 167px;
            margin-top: 50px;
            z-index :3;
          }
        }
      }

      .footer-bg {
        width 900px;
        left 50%;
        transform translateX(-50%);
        bottom: 0;
        position: absolute;

        img {
          width 900px;
          height 100px;
        }
      }
    }

    .right-side {
      position: absolute;
      height: 100%;
      right: 0;
      top: 0;
      width: 500px;
      padding: 0 20px;
    }


    //公共的信用等级样式

    .info-container {
      display flex;
      flex-direction: column;
      justify-content: space-between;

      .level-tag {
        padding-left: 10px;
        height: 29px;
        width: 140px;
        line-height: 29px;
        font-size: 14px;
        color: #fff;
        border-radius: 15px;
      }

      .tag1 {
        background-color: #1890ff;
      }

      .tag2 {
        background-color: #005bff;
      }

      .tag3 {
        background-color: #00baad;
      }

      .tag4 {
        background-color: #008aba;
      }

      p {
        color: #fff;
        padding-left: 10px;
        font-size: 14px;
        line-height: 25px;
      }
    }
  }

}

.card-container {
  height: 100%;

  .panel {
    height: 280px;
    box-shadow: 0 0 5px #3a3baf inset;
    border: 1px solid #3a3baf;
    padding: 15px;
    margin-bottom: 10px;
    position: relative;
    background: url('../images/panel-bg.png') no-repeat;
    background-size: 100%;
    //设置边框小脚

    &::before {
      position: absolute;
      top: 0;
      left: 0;
      width: 8px;
      height: 8px;
      border-left: 2px solid #3b4eb7;
      border-top: 2px solid #3b4eb7;
      content: '';
    }

    &::after {
      position: absolute;
      top: 0;
      right: 0;
      width: 8px;
      height: 8px;
      border-right: 2px solid #3b4eb7;
      border-top: 2px solid #3b4eb7;
      content: '';
    }

    .panel-footer {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;

      &::before {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 8px;
        height: 8px;
        border-left: 2px solid #3b4eb7;
        border-bottom: 2px solid #3b4eb7;
        content: '';
      }

      &::after {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 8px;
        height: 8px
        border-right: 2px solid #3b4eb7;
        border-bottom: 2px solid #3b4eb7;
        content: '';
      }
    }

    .btn-box {
      text-align: right;
      padding: 0 0 10px 0;

      span {
        font-size: 12px;
        width: 60px;
        height: 22px;
        line-height: 22px;
        border-radius: 10px;
        color: #fff;
        background-color: #1890ff;
        padding: 3px 10px;
        cursor: pointer;
      }
    }

    .title-container {
      display: flex;
      align-items: flex-end;
      color: #fff;

      .title-content {
        color: #fff;
        font-weight: 700;
        font-size: 18px;
        margin-bottom: 2px;
        padding-bottom: 10px;
        border-bottom: 1px solid #4E5371;
      }

      .card-line {
        flex: 1;
        height: 17px;
        width: 100%;
        border-top: 1px solid #4E5371;
        border-image: linear-gradient(to right, #4E5371, rgba(255, 255, 255, 0)) 1 10;
      }
    }
  }

  .level-panel {
    height: 371px;
  }
}

