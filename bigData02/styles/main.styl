//旋转地球样式
$p = 140
$itemW = 134
$itemH = 134
$rotateW = 4 * $p
$rotateH = 3.46 * $p
.rotate
  position absolute
  margin 0 auto
  top 50%
  left 50%
  width ($rotateW) px
  height: ($rotateH) px
  transform-style preserve-3d
  // transform rotateX(-10deg)
  // background-color: #fff
  animation rotate3d linear 30s infinite
  z-index 92

  &:hover
    animation-play-state: paused;
    -webkit-animation-play-state: paused;

    .rotate-inner
      .rotate-inner-item
        animation-play-state: paused;
        -webkit-animation-play-state: paused;

  .rotate-inner
    position relative
    width: 100%
    height: 100%
    color #fff

    .rotate-inner-item
      animation rotate3dOpposite linear infinite 30s
      text-align center
      width: ($itemW) px
      height: ($itemH) px
      position relative

      &:nth-child(1)
        position absolute
        top: (0 - $itemH/ 2) px
        left: ($p - $itemW/ 2) px


      &:nth-child(2)
        position absolute
        top: ($rotateH/ 2 - $itemH/ 2) px
        left: ($p* 4 - $itemW/ 2) px


      &:nth-child(3)
        position absolute
        top: ($rotateH - $itemH/ 2) px
        left: ($p - $itemW/ 2) px


      .cir-bg
        position absolute
        left: 50%
        top: 50%
        width: 90px
        height: 90px
        text-align center
        transform translate(-50%, -50%) rotateX(70deg) scaleY(7)
        background-position: center bottom
        -webkit-background-size: 100% 100%
        background-size: 100% 100%
        background-repeat: no-repeat

        .inner-item-text
          position absolute
          top 28px
          width: 100%
          //padding-top: 30px

          p
            font-size: 16px
            text-align center

          .text-title
            font-size: 10px
            text-align center
            width: 100%

          .text-count
            font-weight: 700
            font-size: 10px

            .unit-font
              font-size: 12px

          .text-percent
            position absolute
            bottom: -40px
            left: 35px
            font-weight: 700
            color #fbc606


.earth-wrapper
  position relative

  .title-count
    position absolute
    top: 35%
    left: 50%
    transform translateX(-50%)
    color: #fff
    text-align center
    z-index 100
    font-size: 18px

    i
      text-shadow 0 0 4px #1b131a

    .num
      font-size: 28px

  img
    position absolute
    left: 50%
    top: 50%
    transform translate(-50%, -50%)
    z-index 90

  .cir-1
    position absolute
    left: 50%
    top: 50%
    width: 600px
    height: 600px
    transform translate(-50%, -35%) scale(0.7) rotateX(70deg)
    border: 4px solid #3f96e0
    -webkit-border-radius: 50%
    -moz-border-radius: 50%
    border-radius: 50%

  .cir-2
    @extend .cir-1
    z-index 10
    background-color: rgba(5, 26, 77, 0.8)
    border-color: transparent
    transform translate(-50%, -48%) scale(0.48) rotateX(0)

  .cir-3
    @extend .cir-1
    transform translate(-50%, -35%) scale(0.75) rotateX(70deg)

  .cir-4
    @extend .cir-1
    transform translate(-50%, -35%) scale(0.9) rotateX(70deg)
    border-color transparent
    box-shadow 0 0 70px rgba(2, 176, 240, 1) inset

  .cir-5
    @extend .cir-1
    width: 50px
    height: 50px
    border: 1px dotted rgba(60, 150, 224, 0.4)
    transform translate(-50%, 132%) scale(12) rotateX(70deg)
    animation rotate-cir-5 infinite 120s

  .cir-6
    @extend .cir-1
    width: 100px
    height: 100px
    border: 1px dashed rgba(60, 150, 224, 0.5)
    transform translate(-50%, 42%) scale(7) rotateX(70deg)
    animation rotate-cir-6 infinite 120s

  .cir-7
    @extend .cir-1
    background-image: url(../images/yuan01.png)
    width: 59px
    height: 56px
    -webkit-background-size: cover
    background-size: cover
    background-repeat: no-repeat
    animation rotate-cir-7 infinite 120s
    border-color transparent

  .cir-8
    @extend .cir-1
    width: 50px
    height: 50px
    background-image: url(../images/yuan02.png)
    background-repeat: no-repeat
    border-color transparent
    animation rotate-cir-7 infinite 120s

@keyframes rotate-cir-5
  0% {
    transform: translate(-50%, 132%) scale(12) rotateX(70deg) rotateZ(0)
  }
  50% {
    transform: translate(-50%, 132%) scale(12) rotateX(70deg) rotateZ(0.5turn)
  }
  100% {
    transform: translate(-50%, 132%) scale(12) rotateX(70deg) rotateZ(1turn)
  }

@keyframes rotate-cir-6
  0% {
    transform: translate(-50%, 42%) scale(7) rotateX(70deg) rotateZ(0)
  }
  50% {
    transform: translate(-50%, 42%) scale(7) rotateX(70deg) rotateZ(-0.5turn)
  }
  100% {
    transform: translate(-50%, 42%) scale(7) rotateX(70deg) rotateZ(-1turn)
  }

@keyframes rotate-cir-7
  0% {
    transform: translate(-50%, 140%) scale(18) rotateX(70deg) rotateZ(0)
  }
  50% {
    transform: translate(-50%, 140%) scale(18) rotateX(70deg) rotateZ(-0.5turn)
  }
  100% {
    transform: translate(-50%, 140%) scale(18) rotateX(70deg) rotateZ(-1turn)
  }

@keyframes rotate3d {
  0% {
    transform: translate(-50%, -50%) rotateX(65deg) rotateZ(0) scale(1.4)
  }
  100% {
    transform: translate(-50%, -50%) rotateX(65deg) rotateZ(1turn) scale(1.4)
  }
}

@keyframes rotate3dOpposite {
  0% {
    transform: rotateZ(0)
  }
  100% {
    transform: rotateZ(-1turn)
  }
}

