#app {
  position: relative;
}
.page-container {
  background: url("../images/ankang/beijing.png") center no-repeat;
  background-size: 100% 100%;

  .page-title {
    color: #fff;
    font-weight: 700;
    text-align: center;
    background-image: url("../images/ankang/toubu1.png");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    height: 118px;
    position: relative;

    .text-gradient {
      position: absolute;
      width: 640px;
      height: 48px;
      left: 640px;
      top: 38px;
      letter-spacing: 10px;
      color: rgba(48, 193, 255, 1);
      font-size: 30px;
      line-height: 150%;
      text-align: center;
      font-weight: bold;
    }


    .header-line{
      position absolute;
      left 670px;
      text-align: center;
      top 105px;
      width 580px;
      height 3px;
      background: url("../images/ankang/toubu01.png") center no-repeat;
      background-size: 100%;
    }
    .left-bg{
      position absolute;
      left 200px;
      text-align: center;
      top 68px;
      width 329px;
      height 19px;
      background: url("../images/ankang/left.png") center no-repeat;
      background-size: 100%;
    }
    .right-bg{
      position absolute;
      right 200px;
      text-align: center;
      top 68px;
      width 329px;
      height 19px;
      background: url("../images/ankang/right.png") center no-repeat;
      background-size: 100%;
    }
    .user-bar {
      position: absolute;
      width: 245px;
      height: 20px;
      left: 1595px;
      top: 15px;
      color: rgba(67, 207, 124, 1);
      font-size: 14px;
      line-height: 150%;
      text-align: center;
    }

    .title-container {
      position: absolute;
      width: 128px;
      top: 68px;
      margin-left: 10px;

      .title-content {
        color: #fff;
        font-size: 12px;
        width: 100%;
        height: 100%;
        background: none;
        color: #fff;
        padding: 5px 0;

      }
    }

  }

  .main {
    position: relative;
    height: calc(1080px - 118px);
    .left-side,.right-side{
      .panel:last-child{
        margin-bottom :0;
      }
    }
    .left-side {
      position: absolute;
      left: 0;
      top: 0;
      width: 505px;
      padding: 0 20px;
    }


    .right-side {
      position: absolute;
      //height: 100%;
      right: 0;
      top: 0;
      width: 505px;
      padding: 0 20px;

      .btn-box {
        position: absolute;
        z-index: 6;
        right: 20px;
        top: 45px;
        width: 200px;

        .bin-dropdown-menu {
          text-align: center;
          background-color: #fff;
        }

        .dropBtn {
          width: 85px;
          background: unset;
          color: #fff;
          border-radius: 20px;
          border-color: #168cd2;
          height: 32px;
          line-height: 30px;
          padding: 0 10px;

          span {
            color: #168cd2;
          }
        }

      }
    }
    .card-container {
      height: 100%;
      position: relative;

      .panel {
        box-shadow: 0px 0px 5px #3a3baf inset;
        //border: 1px solid #00bcfd;
        padding: 15px;
        //margin-bottom: 20px;
        position: relative;
        background: url('../images/ankang/juxing01.png') no-repeat;
        background-size: 100%;
        //设置边框小脚

        &::before {
          position: absolute;
          top: 0;
          left: 0;
          width: 8px;
          height: 8px;
          border-left: 2px solid #00ffff;
          border-top: 2px solid #00ffff;
          content: '';
        }

        &::after {
          position: absolute;
          top: 0;
          right: 0;
          width: 8px;
          height: 8px;
          border-right: 2px solid #00ffff;
          border-top: 2px solid #00ffff;
          content: '';
        }

        .panel-footer {
          position: absolute;
          bottom: 0;
          left: 0;
          width: 100%;

          &::before {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 8px;
            height: 8px;
            border-left: 2px solid #00ffff;
            border-bottom: 2px solid #00ffff;
            content: '';
          }

          &::after {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 8px;
            height: 8px;
            border-right: 2px solid #00ffff;
            border-bottom: 2px solid #00ffff;
            content: '';
          }
        }

        .title-container {
          display: flex;
          align-items: flex-end;
          color: #fff;

          .title-content {
            color: #fff;
            font-weight: 700;
            font-size: 18px;
            margin-bottom: 2px;
            padding-bottom: 10px;
          }

        }
      }

    }

  }

}